pipeline {
    agent any

    stages {
        stage('Clone Branches') {
            steps {
                script {
                    def branches = ['b1', 'main']
                    
               
                    for (branch in branches) {
                        dir(branch) { 
                            checkout([$class: 'GitSCM', 
                                branches: [[name: "origin/${branch}"]],
                                userRemoteConfigs: [[url: 'https://github.com/basharmadani10/laravel-jenkins']]
                            ])
                        }
                    }
                }
            }
        }
    }
}
