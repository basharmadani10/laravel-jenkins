pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        stage('Environment Variables') {
            steps {
                sh 'printenv'
                sh 'ls -la'
            }
        }
        
        stage('Pull Request Number') {
            when {
                changeRequest target: 'main'
            }
            steps {
                echo "PR: ${CHANGE_ID}"
            }
        }            
        
        stage('Dockerize') {
            steps {
                sh "echo "docker"
            }
        }

        stage('Login to Docker Hub') {
            steps {
                sh 'echo "dockerhub"'
            }
        }

        stage('Upload to Docker Hub') {
            steps {
                sh "echo 'docker push mo1074/jenkins-app:${BUILD_NUMBER}'"
            }
        }    
    }
}
